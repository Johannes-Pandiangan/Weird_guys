{
  "version": 2,
  "builds": [
    { 
      "src": "Backend-Database/server.js", 
      "use": "@vercel/node",
      "config": { "includeFiles": ["Backend-Database/db.js"] } 
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/Backend-Database/server.js" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" }
      ]
    }
  ]
}
